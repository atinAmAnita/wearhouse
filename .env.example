# MongoDB Connection (Required for production)
# Get a free cluster at https://www.mongodb.com/atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/stockforge?retryWrites=true&w=majority

# eBay Developer Credentials
# Get these from https://developer.ebay.com/
EBAY_CLIENT_ID=your-ebay-client-id
EBAY_CLIENT_SECRET=your-ebay-client-secret
EBAY_RUNAME=your-ebay-runame
EBAY_ENVIRONMENT=sandbox

# Admin Settings
ADMIN_PASSWORD=your-secure-admin-password

# Server (optional, Vercel sets this automatically)
PORT=3000
